# filter_node: modular joint command filter (Kalman etc.)
# Config via FILTER_NODE_CONFIG or /etc/ros2/filter_node/config.yaml
FROM ros:jazzy-ros-base

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-pip \
    python3-venv \
    ros-jazzy-rclpy \
    ros-jazzy-sensor-msgs \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
RUN python3 -m venv /app/venv && /app/venv/bin/pip install --no-cache-dir poetry
ENV PATH="/app/venv/bin:$PATH"
RUN poetry config virtualenvs.in-project true

COPY pyproject.toml poetry.lock* ./
RUN poetry install --only main --no-interaction --no-root
ENV PATH="/app/.venv/bin:$PATH"

COPY filter_node ./filter_node

CMD ["bash", "-c", "source /opt/ros/jazzy/setup.bash && exec python3 -m filter_node"]
